@inject IAuthService AuthService

<h1>change password page</h1>

<EditForm Model="dto" OnValidSubmit="ChangePasswordx">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="mb-3">
        <label for="password">New password</label>
        <InputText id="password" @bind-Value="dto.Password" class="form-control" type="password" />
        <ValidationMessage For="@(()=>dto.Password)" />
    </div>
    <div class="mb-3">
        <label for="confirmPassword">Confirm Password</label>
        <InputText id="confirmPassword" @bind-Value="dto.ConfirmPassword" class="form-control" type="password" />
        <ValidationMessage For="@(()=>dto.ConfirmPassword)" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <div>
        <p class="mb-0 mt-3">
            <NavLink href="login" class="text-white-50 fw-bold">Back to Login</NavLink>
        </p>
    </div>
</EditForm>
@message
@code {
    ChangePasswordDto dto = new ChangePasswordDto();
    string message = string.Empty;

    private async Task ChangePasswordx()
    {
        var result = await AuthService.ChangePassword(dto);
        message = result.Message;
    }
}
